.trip
  = link_to trip, class: 'trip-item' do
    .driver
      .avatar= image_tag('covoiturage-avatar-default2.png')
      .info
        .name= trip.name
        .age= "#{trip.age} ans" if trip.age.present?
    .trip-info
      .title
        =l trip.departure_date, format: :long
        =l trip.departure_time, format: :short
      .details
        = "#{trip.point_from.city}"
        &rarr;
        = "#{trip.point_to.city}"
    .price
      %p= "#{trip.price} â‚¬"
      .seats
        = "#{trip.seats} places"
    .clearfix