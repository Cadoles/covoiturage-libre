/ Main jumbotron for a primary marketing message or call to action
.jumbotron
  .container
    .row
      .col-md-9
        %h2 Trouvez votre covoiturage
        %p Le covoiturage gratuit, communautaire et libre.
        = simple_form_for @search, url: search_url,html: { class: 'form-inline' } do |f|
          = f.input :from, as: :string, wrapper_html: { class: 'ui-widget' }, input_html: { class: 'input-lg' }, label: false, placeholder: 'De'
          = f.input :from_coordinates, as: :hidden
          = f.input :to, as: :string, wrapper_html: { class: 'ui-widget' }, input_html: { class: 'input-lg' }, label: false, placeholder: 'Ã€'
          = f.input :to_coordinates, as: :hidden
          = f.input :date, as: :string, input_html: { class: 'datepicker input-lg' }, label: false, placeholder: 'Date'
          %button.btn.btn-default.btn-primary.btn-lg{:type => "submit"} Rechercher
      .col-md-3
        .publish
          Vous avez une voiture ?
          %br
          %br
          = link_to 'Publiez une annonce', new_trip_path, class: 'btn btn-lg btn-warning'

